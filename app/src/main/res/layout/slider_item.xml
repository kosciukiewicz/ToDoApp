<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.witold.todoapp.view.slider_activity.view_pager.CustomLinearLayout
        android:id="@+id/item_root"
        android:padding="48dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_view_slider_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/slider_element_2"
            />
        <TextView
            android:id="@+id/text_view_slider_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Opis opis opis"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </com.witold.todoapp.view.slider_activity.view_pager.CustomLinearLayout>>
</LinearLayout>